{
  "name": "vml",
  "version": "1.0.0",
  "description": "Vande Mataram Library",
  "scripts": {
    "start": "per-env",
    "run:server": "per-env",
    "start:development": "npm run build:server && npm run run:server",
    "start:production": "npm run build:server && npm run build:client && npm run run:server",
    "build:server": "tsc",
    "run:server:development": "node build/server/devServer",
    "run:server:production": "node -r dotenv/config build/server/prodServer",
    "build:client": "webpack --config config/webpack.config.prod.js",
    "lint": "tslint -c ./tslint.json  './src/**/*.ts' './src/**/*.tsx'"
  },
  "pre-commit": [
    "lint",
    "build:server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vandemataramlib/vml-web"
  },
  "keywords": [
    "sanskrit"
  ],
  "author": "prashaantt@gmail.com",
  "license": "ISC",
  "dependencies": {
    "boom": "^3.2.2",
    "core-js": "^2.4.0",
    "dotenv": "^2.0.0",
    "fbjs": "^0.8.3",
    "handlebars": "^4.0.5",
    "hapi": "^13.5.0",
    "history": "^3.0.0",
    "hoek": "^4.0.2",
    "inert": "^4.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonapi-serializer": "^3.2.1",
    "material-ui": "^0.15.2",
    "mobx": "^2.4.1",
    "mobx-react": "^3.5.3",
    "per-env": "^1.0.2",
    "react": "^15.3.0",
    "react-anything-sortable": "^1.5.1",
    "react-dom": "^15.3.0",
    "react-router": "^2.5.2",
    "react-tap-event-plugin": "^1.0.0",
    "sanscript": "^0.0.2",
    "vision": "^4.1.0",
    "vml-common": "https://github.com/vandemataramlib/vml-common.git"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^2.0.2",
    "mobx-react-devtools": "^4.2.4",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "^3.0.0-beta.2",
    "tslint": "^3.13.0",
    "typescript": "^1.8.10",
    "webpack": "^1.13.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-notifier": "^1.3.0"
  }
}
